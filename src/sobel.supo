kernel: sobel
burst width: 512
dram separate: no
dram bank: 1
unroll factor: 8
input uint16: img(512,)
buffer uint16: mag_x(0, 0) =
    (img(1, -1) - img(-1, -1)) +
    (img(1,  0) - img(-1,  0)) * 3 +
    (img(1,  1) - img(-1,  1))
buffer uint16: mag_y(0, 0) =
    (img(-1, 1) - img(-1, -1)) +
    (img( 0, 1) - img( 0, -1)) * 3 +
    (img( 1, 1) - img( 1, -1))
output uint16: mag(0, 0) = 65535 - (mag_x(0, 0) * mag_x(0, 0) + mag_y(0, 0) * mag_y(0, 0))
iterate: 1
border: ignore

